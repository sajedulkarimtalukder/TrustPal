                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Name"
                            android:id="@+id/name11"
                            android:textColor="#ffffff"
                            android:singleLine="false" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
