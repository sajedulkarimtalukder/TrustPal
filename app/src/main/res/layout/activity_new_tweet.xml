<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fiu_CaSPR.Frank.safebuk.NewTweet">
    <TextView
        android:id="@+id/TweetLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Tweet"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/newTweetLabel"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:text="Write your tweet"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/newTweetInput"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:cursorVisible="true"
            android:ems="10"
            android:textColor="@color/black" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/tweetPostButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:onClick="tweetPost"
             />
        <Button
            android:id="@+id/tweetCancelButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:onClick="tweetCancel"
             />

    </LinearLayout>

</LinearLayout>