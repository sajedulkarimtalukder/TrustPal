<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".FakeLogout"
    android:background="#3D5B99">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layer1"
            android:layout_gravity="center"
            android:paddingTop="40dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView13"
                android:src="@drawable/fblogo"
                android:paddingBottom="40dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layer2"
            android:layout_gravity="center">

            <EditText
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:text=" Email"
                android:textColor="#868686"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layer3"
            android:layout_gravity="center"
            android:paddingTop="15dp">

            <EditText
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:inputType="textEmailAddress|textPassword"
                android:ems="10"
                android:id="@+id/editText3"
                android:background="#ffffff"
                android:text=" Password"
                android:textColor="#868686"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layer4"
            android:layout_gravity="center"
            android:paddingTop="15dp">

            <Button
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:text="Login"
                android:id="@+id/button"
                android:background="#203B72"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layer5"
            android:layout_gravity="center"
            android:paddingTop="130dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/fb_text"
                android:id="@+id/textView16"
                android:textColor="#ffffff"
                android:clickable="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layer6"
            android:layout_gravity="center"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/next"
                android:src="@drawable/fbbottom"
                android:clickable="false" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
