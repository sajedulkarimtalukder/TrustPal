<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="#494747"
    android:gravity="center_vertical|center"
    android:orientation="vertical" >



    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.49" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#494747">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/propicimageview"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:src="@drawable/icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/frndcount"
                        android:layout_width="258dp"
                        android:layout_height="wrap_content"
                        android:gravity="top|right"
                        android:text="0 of 20"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/green"
                        android:textColorLink="@color/white" />

                    <TextView
                        android:id="@+id/usernamenew"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="UserName"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#fff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/textView12" />

                </LinearLayout>

            </LinearLayout>

            <!---*************************** Question 1  ***********************************-->

            <LinearLayout
                android:id="@+id/layoutquestion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How frequently do you interact with this friend in Facebook?"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="20px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" >

                    <CheckBox
                        android:id="@+id/CheckBox11"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Frequently"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/CheckBox12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="0.5"
                        android:padding="0dp"
                        android:text="Occasionally"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" >

                    <CheckBox
                        android:id="@+id/CheckBox13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Not Anymore"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/CheckBox14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Never"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:id="@+id/CheckBox15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Don&apos;t Remember"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

            <!---*************************** Question 2  ***********************************-->

            <LinearLayout
                android:id="@+id/layoutquestion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How frequently do you interact with this friend in real life?"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="20px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" >

                    <CheckBox
                        android:id="@+id/CheckBox21"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Frequently"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/CheckBox22"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="0.5"
                        android:padding="0dp"
                        android:text="Occasionally"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" >

                    <CheckBox
                        android:id="@+id/CheckBox23"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Not Anymore"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/CheckBox24"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Never"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:id="@+id/CheckBox25"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Don&apos;t Remember"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

            <!---**************************** Question 3  **********************************-->

            <LinearLayout
                android:id="@+id/layoutquestion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30px">

                <TextView
                    android:id="@+id/TextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This friend would abuse or misuse a sensitive picture that you upload (for instance, at the beach or at a party etc.)"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="20px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" >

                    <CheckBox
                        android:id="@+id/CheckBox31"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Agree"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/CheckBox32"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="0.5"
                        android:padding="0dp"
                        android:text="Disagree"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/CheckBox33"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Don&apos;t Know"
                        android:textColor="@color/white" />


                </LinearLayout>

            </LinearLayout>


            <!---***************************** Question 4  *********************************-->

            <LinearLayout
                android:id="@+id/layoutquestion4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30px">

                <TextView
                    android:id="@+id/TextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This friend would abuse a status update that you post (for instance, he/she would reply with an abusive comment or share it in an undesirable way)"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="20px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" >

                    <CheckBox
                        android:id="@+id/CheckBox41"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Agree"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/CheckBox42"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="0.5"
                        android:padding="0dp"
                        android:text="Disagree"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/CheckBox43"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Don&apos;t Know"
                        android:textColor="@color/white" />


                </LinearLayout>

            </LinearLayout>



            <!---***************************** Question 5  *********************************-->

            <LinearLayout
                android:id="@+id/layoutquestion5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30px">

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This friend would post offensive, misleading, false or potentially malicious content on Facebook"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="20px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" >

                    <CheckBox
                        android:id="@+id/CheckBox51"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Agree"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/CheckBox52"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="0.5"
                        android:padding="0dp"
                        android:text="Disagree"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/CheckBox53"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Don&apos;t Know"
                        android:textColor="@color/white" />


                </LinearLayout>

            </LinearLayout>


            <!---**************************************************************-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" >

                <Button
                    android:id="@+id/doneButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.52"
                    android:text="Done" />

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.44"
                    android:text="Back" />

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.44"
                    android:text="Next" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>